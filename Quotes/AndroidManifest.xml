    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/quotation_marks"
        android:label="@string/app_name"
        android:theme="@style/MainTheme2" >
