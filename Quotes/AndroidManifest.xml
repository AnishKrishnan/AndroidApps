            android:name="com.krishapps.mynotes.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.krishapps.mynotes.HeaderListFragment"
            android:label="@string/title_activity_header_list_fragment" >
        </activity>
        <activity
            android:name="com.krishapps.mynotes.QuoteView"
            android:label="@string/title_activity_quote_view" >
        </activity>
    </application>

</manifest>