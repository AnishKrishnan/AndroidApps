import org.opencv.core.Mat;
import org.opencv.highgui.VideoCapture;




public class Main {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		VideoCapture cap = new VideoCapture(0);
		namedWindow("video");
		if(cap.isOpened()){
			
			Mat frame = new Mat();
			
			cap.retrieve(frame);
			
			imshow("video",frame);
		}
	}

}
